<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/image_descriptor"
        android:foreground="@drawable/gradient"
        android:scaleType="centerCrop"
        android:src="@drawable/fisu" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingTop="16dp"
        android:text="@string/businessName"
        android:textAlignment="center"
        android:textColor="#d88922"
        android:textSize="42sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="32dp"
        android:text="@string/businessDesc"
        android:textAlignment="center"
        android:textColor="#d88922"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/phone_icon"
            android:includeFontPadding="false"
            android:paddingTop="10dp"
            android:text="050 1234 567"
            android:textColor="#d88922"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/phone_icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/email" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/email_icon"
            android:includeFontPadding="false"
            android:paddingTop="10dp"

            android:text="hola@coldharbour.fish"
            android:textColor="#d88922"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/email_icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/map" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/location_icon"
            android:includeFontPadding="false"
            android:paddingTop="10dp"
            android:text="OakStreet 1, 123456 Oakwood"
            android:textColor="#d88922"
            android:textSize="24sp" />

    </RelativeLayout>

</LinearLayout>